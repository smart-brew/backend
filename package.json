{
  "name": "backend",
  "version": "1.0.0",
  "main": "server.js",
  "type": "module",
  "license": "MIT",
  "scripts": {
    "prepare": "husky install",
    "start": "node server.js"
  },
  "devDependencies": {
    "@types/express": "^4.17.13",
    "@types/ws": "^8.2.0",
    "commit-message-validator": "^1.0.2",
    "husky": "^7.0.2",
    "typescript": "^4.4.4"
  },
  "config": {
    "commit-message-validator": {
      "pattern": "((feature)|(fix)|(chore))\\(SB-[1-9]\\d*\\): .*",
      "errorMessage": "+--------------------------------------------------------------------+\n| Check correct commit message formatting in SmartBrew documentation |\n+--------------------------------------------------------------------+"
    }
  },
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "ws": "^8.2.3"
  }
}
